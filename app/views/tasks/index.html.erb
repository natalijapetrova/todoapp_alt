<%= link_to 'New Task', new_task_path, class: "btn btn-success btn-sm" %>
<h1>Listing tasks</h1>

<table class="table  table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Deadline</th>
      <th>Done</th>
      <th>Duration</th>
      <th></th>
    
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.name, edit_task_path(task) %></td>
        <td><%= task.deadline %></td>
        <td><%= task.done %></td>
        <td><%= task.duration %></td>
        
 
        
        <td><%= link_to 'Destroy', task, class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %>

        </td>
      </tr>
    <% end %>
    <% if notice %> 

  <p id="notice" class="alert alert-success alert-dismissable fade in" data-dismiss="alert" aria-hidden="true">
    <%= notice %>
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  </p>
<% end %>
  </tbody>
</table>

<br>


